<h1>ライブ登録画面</h1>

<%= form_with(model: @live, local:true) do |form| %>
  <% if @live.errors.any? %>
    <div id="error_explanation">
      <h2><%= @live.errors.count %>件のエラーがあります。</h2>
      <ul>
      <% @live.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="live_title">
    <%= form.label :title %>
    <%= form.text_field :title %>
  </div>

  <div class="live_date">
    <%= form.label :date %>
    <%= form.date_field :date %>
  </div>

  <div class="live_time">
    <%= form.label :time %>
    <%= form.time_select :start_time, {include_blank: true} %>
    <span>〜</span>
    <%= form.time_select :ending_time, {include_blank: true} %>
  </div>
  
  <div class="live_place">
    <%= form.label :place %>
    <%= form.text_field :place %>
  </div>

  <div class="live_price">
    <%= form.label :price %>
    <%= form.text_field :price %>
  </div>

  <div class="live_content">
    <%= form.label :content %>
    <%= form.text_area :content, size:"50×10" %>
  </div>

  <%= form.submit "登録" %>

<% end %>
<p><%= link_to 'ライブ一覧に戻る', lives_path %></p>
