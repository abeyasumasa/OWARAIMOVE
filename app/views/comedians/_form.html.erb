<div class="wrapper">
  <div class="container">
    <div class="row">
      <div class="comedian_create col-sm-12">
        <%= form_with(model: @comedian, local: true, url: choose_new_or_edit) do |form| %>
          <% if @comedian.errors.any? %>
            <div id="error_explanation">
              <h2><%= @comedian.errors.count %>件のエラーがあります。</h2>
              <ul>
                <% @comedian.errors.full_messages.each do |msg| %>
                  <li><%= msg %></li>
                <% end %>
              </ul>
            </div>
          <% end %>


          <div class="comedian_icon">
            <%= form.label t('view.comedian.combination_icon') %><br>
            <%= image_tag(@comedian.combination_icon.url) if @comedian.combination_icon && @comedian.combination_icon.url %>
            <%= form.file_field :combination_icon %>
            <%= form.hidden_field :combination_icon_cache %>
          </div>

          <div class="comedian_comment">
            <%= form.label t('view.comedian.comment') %><br>
            <%= form.text_area :comment, id: 'Comment' %>
          </div>

          <div class="comedian_combination_name">
            <%= form.label t('view.comedian.combination_name') %><br>
            <%= form.text_field :combination_name, id: 'Combination_name' %>
          </div>

          <div class="comedian_email">
            <%= form.label t('view.email') %><br>
            <%= form.email_field :email, id: 'Email' %>
          </div>

          <div class="comedian_genre">
            <%= form.label t('view.comedian.genre') %><br>
            <%= form.select :genre, ["コント", "漫才", "フリートーク", "モノマネ", "リアクション芸", "大喜利",
                                     "一発ギャグ", "歌ネタ/リズムネタ", "ピン芸人", "フリップ芸", "漫談"], :prompt => "選択してください" %>
          </div>

          <div class="comedian_twitter_url">
            <%= form.label :twitter_url %><br>
            <%= form.text_field :twitter_url, id: 'Twitter_url' %>
          </div>

          <div class="comedian_youtube_url">
            <%= form.label :youtube_url %><br>
            <%= form.text_field :youtube_url, id: 'Youtube_url' %>
          </div>

          <%= form.submit t('view.comedian.entry') ,class: "btn btn-success mt-2"%>

        <% end %>
      </div>
    </div>
  </div>
</div>