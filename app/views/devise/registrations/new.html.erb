<div class="container mt-5">
  <div class="wrapper">
    <div class="form-signin">
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>

        <h3 class="form-signin-heading">サインアップ</h3>
        <hr class="colorgraph">
        <br>

        <div class="form-control">
          <%= f.label t('view.user.name') %><br/>
          <%= f.text_field :name, id: 'Name', autofocus: true %>
        </div>

        <div class="form-control">
          <%= f.label t('view.email') %><br/>
          <%= f.email_field :email, id: 'Email', autofocus: true, autocomplete: "email" %>
        </div>

        <div class="form-control">
          <%= f.label t('view.user.password') %><br/>
          <%= f.password_field :password, id: 'Password', autocomplete: "new-password" %>
        </div>

        <div class="form-control">
          <%= f.label t('view.user.password_confirmation') %><br/>
          <%= f.password_field :password_confirmation, id: 'Password_confirmation', autocomplete: "new-password" %>
        </div>

        <div class="form-control">
          <%= f.check_box :entertainer, {:checked => false}, checked_value = "true", unchecked_value = "false" %>
          <%= f.label t('view.user.entertainer') %>
        </div>

        <div class="btn btn-lg btn-block">
          <%= f.submit t('view.sign_up'), class: " btn btn-primary" %>
        </div>
      <% end %>

      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>