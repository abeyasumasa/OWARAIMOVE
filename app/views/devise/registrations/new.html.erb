<div class="container mt-5">
  <div class="wrapper">
    <div class="form-signin">
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>

        <h3 class="form-signin-heading">サインアップ</h3>
        <hr class="colorgraph">
        <br>
        <%= f.text_field :name, placeholder: t('view.user.name'), class:'form-control', id: 'Name', autofocus: true %>
        <%= f.email_field :email, placeholder: t('view.email'), class:'form-control', id: 'Email', autocomplete: "email" %>
        <%= f.password_field :password, placeholder: t('view.user.password'), class:'form-control', id: 'Password' %>
        <%= f.password_field :password_confirmation, placeholder: t('view.user.password_confirmation'), class:'form-control', id: 'Password_confirmation' %>
        <div class="form-control">
          <%= f.check_box :entertainer, {:checked => false}, checked_value = "true", unchecked_value = "false" %>
          <%= f.label t('view.user.entertainer') %>
        </div>

        <div class="btn btn-lg btn-block">
          <%= f.submit t('view.sign_up'), class: " btn btn-primary" %>
        </div>
      <% end %>

      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>