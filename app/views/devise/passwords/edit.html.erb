<div class="container mt-5">
  <div class="wrapper">
    <div class="form-change-password">
      <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>
        <%= f.hidden_field :reset_password_token %>

        <h3 class="form-change-password-heading">
          <%= f.label t('devise.passwords.edit.change_your_password') %>
        </h3>
        <hr class="colorgraph">
          <% if @minimum_password_length %>
            <%= f.password_field :password, autofocus: true, autocomplete: "new-password", class:'form-control',placeholder: t('view.user.password') %>
            <%= f.password_field :password_confirmation, autocomplete: "new-password", class:'form-control',placeholder: t('view.user.password_confirmation') %>
          <% end %>

        <div class="btn btn-lg btn-block">
          <%= f.submit t('devise.passwords.edit.change_my_password'),class: " btn btn-primary" %>
        </div>
      <% end %>

      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>