<div class="container mt-5">
  <div class="wrapper">
    <div class="form-forgot-password">
      <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>

        <h3 class="form-forgot-password-heading">
          <%= f.label t('devise.passwords.new.forgot_your_password') %>
        </h3>
        <hr class="colorgraph">
        <br>
          <%= f.email_field :email, placeholder: t('view.email'), class:'form-control', id: 'Email', autocomplete: "email" %>

        <div class="btn btn-lg btn-block">
          <%= f.submit t('devise.passwords.new.send_me_reset_password_instructions'),class: " btn btn-primary" %>
        </div>
      <% end %>

      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>