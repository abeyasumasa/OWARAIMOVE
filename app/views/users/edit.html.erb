<div class="wrapper">
  <div class="container">
    <div class="row">
      <div class="user_edit col-sm-12">
        <h2><%= @user.name %>の編集画面</h2>

        <%= form_with(model: @user, local: true) do |f| %>
          <% if @user.errors.any? %>
            <div id="error_explanation">
              <h2><%= @user.errors.count %>件のエラーがあります。</h2>
              <ul>
                <% @user.errors.full_messages.each do |msg| %>
                  <li><%= msg %></li>
                <% end %>
              </ul>
            </div>
          <% end %>
          <div class="field">
            <%= f.label t('view.user.icon') %>
            <p><%= image_tag @user.icon.thumb.to_s %></p>
            <%= f.file_field :icon %>
          </div>

          <div class="field">
            <%= f.label t('view.user.name') %>
            <%= f.text_field :name, id: 'Name', autofocus: true %>
          </div>

          <div class="field">
            <%= f.label t('view.email') %>
            <%= f.email_field :email, id: 'Email', autofocus: true, autocomplete: "email" %>
          </div>

          <div class="field">
            <%= f.label t('view.user.entertainer') %>
            <%= f.check_box :entertainer, {}, checked_value = "true", unchecked_value = "false" %>
          </div>

          <div class="actions">
            <%= f.submit t('view.user.update') %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>